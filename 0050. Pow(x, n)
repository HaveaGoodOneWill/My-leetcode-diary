class Solution {
    public double myPow(double x, int n) {
        long N = n;
        if (N < 0) {
            x = 1 / x;
            N = -N;
        }

        double sum = 1;
        double time = x;
        while (N > 0) {
            if (N % 2 == 1) {
                sum = sum * time;
            }
            time *= time;
            N /= 2;
        }
        return sum;
    }
}
